@model gpdSW.Models.ViewModels.AccountVM.LoginViewModel
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Iniciar Sesión</title>
    <link rel="stylesheet" href="~/estilos/account/InicioSesion1.css">
</head>
<body>

    <div class="container">
        <div class="login-box">
            <div class="icon-user">
                <img src="https://static.vecteezy.com/system/resources/previews/019/879/186/large_2x/user-icon-on-transparent-background-free-png.png" alt="Usuario">
            </div>

            <h2>Iniciar Sesión</h2>

            <form method="post" action="~/Account/Login">
                <label for="email">Correo Electrónico:</label>
                <input type="email" id="email" asp-for="Correo">

                <label for="password">Contraseña:</label>
                <input type="password" id="password" asp-for="Contraseña">

                <div class="links">
                    <a href="~/Account/RestablecerContraseña">¿Olvidó su contraseña?</a>
                    <a href="~/Account/Registro">Regístrese aquí</a>
                </div>

                @Html.ValidationSummary()

                <button type="submit" class="btn-login">Iniciar Sesión</button>

                <div class="social-buttons">
                    <button class="btn-social">F</button>
                    <button class="btn-social">G</button>
                </div>
            </form>
        </div>

        <div class="side-design"></div>
    </div>
</body>
</html>
