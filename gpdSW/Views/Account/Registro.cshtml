@model gpdSW.Models.ViewModels.AccountVM.RegistroViewModel
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Registrarse</title>
    <link rel="stylesheet" href="~/estilos/Account/Registrarse.css">
</head>
<body>

    <div class="container">
        <div class="register-box">
            <div class="icon-user">
                <img src="https://static.vecteezy.com/system/resources/previews/019/879/186/large_2x/user-icon-on-transparent-background-free-png.png" alt="Usuario">
            </div>
            <h2>Registrarse</h2>

            <form method="post" action="~/Account/Registro">
            
            <label>Nombre de Usuario:</label>
            <input style="font-family:'Times New Roman'" placeholder="Ingrese su nombre" asp-for="Nombre">

            <label for="email">Correo Electrónico:</label>
            <input style="font-family:'Times New Roman'" type="email" id="email" placeholder="Ingrese su correo" asp-for="Correo">

            <label for="password">Contraseña:</label>
            <input style="font-family:'Times New Roman'" type="password" id="password" placeholder="Ingrese su contraseña" asp-for="Contraseña">

            <label for="confirm-password">Confirmar contraseña:</label>
            <input style="font-family:'Times New Roman'" type="password" id="confirm-password" placeholder="Confirme su contraseña" asp-for="RepetirContraseña">

            @Html.ValidationSummary()

            <button class="btn-register">Registrarse</button>

            <div class="social-buttons">
                <button class="btn-social">F</button>
                <button class="btn-social">G</button>
            </div>
            </form>
        </div>

        <div class="side-design"></div>
    </div>

</body>
</html>
