@model gpdSW.Models.ViewModels.CatalogoViewModel
@{
	ViewData["Title"] = "Catalogo";
	Layout = "~/Views/shared/Layout.cshtml";
}
<!DOCTYPE html>
<html lang="es">
<head>
	<meta charset="UTF-8">
	<meta name="viewport" content="width=device-width, initial-scale=1.0">
	<title>Productos - Cheese&More</title>
	<style>
		/* Estilos generales */
		body {
			font-family: 'Candara', serif;
			margin: 0;
			padding: 0;
			background-color: white;
		}

		nav {
			background-color: #b2b785;
			padding: 15px 20px;
		}

		.nav-container {
			display: flex;
			justify-content: space-between;
			align-items: center;
			max-width: 1200px;
			margin: auto;
		}

		.logo {
			font-size: 24px;
			font-weight: bold;
		}

		.nav-links {
			list-style: none;
			display: flex;
			gap: 20px;
		}

			.nav-links li a {
				text-decoration: none;
				color: black;
				font-weight: bold;
				font-size: 16px;
			}

		.icons {
			display: flex;
			gap: 15px;
		}

		.icon {
			font-size: 18px;
			cursor: pointer;
		}


		.hero {
			text-align: center;
			padding: 20px;
		}

			.hero h1 {
				font-size: 40px;
				margin-bottom: 8px;
				font-weight: normal;
			}

			.hero p {
				font-size: 18px;
				color: #444;
			}

	
		.productos-con-filtros {
			display: flex;
			max-width: 1200px;
			margin: 20px auto;
			gap: 20px;
		}

		.filtros {
			width: 200px;
			background-color: #f5f5f5;
			padding: 15px;
			border-radius: 10px;
			box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
		}

			.filtros h2 {
				color: #333;
				margin-bottom: 15px;
				font-size: 1.2em;
			}

			.filtros ul {
				list-style-type: none;
				padding: 0;
			}

				.filtros ul li {
					margin: 10px 0;
				}

					.filtros ul li a {
						text-decoration: none;
						color: #333;
						font-weight: bold;
						transition: color 0.3s ease;
					}

						.filtros ul li a:hover {
							color: #28a745; 
						}

		.productos {
			flex: 1;
			display: grid;
			grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
			gap: 20px;
		}

		.producto {
			background-color: white;
			padding: 15px;
			border-radius: 10px;
			box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
			text-align: center;
			transition: transform 0.3s ease, box-shadow 0.3s ease;
		}

			.producto:hover {
				transform: translateY(-5px);
				box-shadow: 0 6px 12px rgba(0, 0, 0, 0.15);
			}

			.producto img {
				max-width: 100%;
				border-radius: 10px;
				margin-bottom: 10px;
			}

			.producto h3 {
				color: #333;
				margin: 10px 0;
				font-size: 1.1em;
			}

			.producto p {
				color: #666;
				font-size: 0.9em;
			}

			.producto .precio {
				color: #333;
				font-weight: bold;
				font-size: 1.1em;
				margin-top: 10px;
			}

		

		.promocion {
			color: darkolivegreen; /* Verde principal para el precio */
			text-decoration: line-through;
		}

		.copyright {
			text-align: center;
			font-size: 12px;
			margin-top: 20px;
		}
	</style>

</head>
<body>

	<div class="hero">
		<h1>Nuestro catalogo!</h1>

	</div>


	<div class="productos-con-filtros">

		<div class="filtros">
			<h2>Categorías</h2>
			<ul>
				@foreach (var item in Model.listacategorias)
				{
					<li> <a href="~/Home/Catalogo/@(item.Id)">@item.Categorias</a></li>

				}
				<li> <a href="~/Home/Catalogo">Ver Todo</a></li>
			</ul>
		</div>


		<div class="productos">

			@foreach (var item in Model.listaproducttos)
			{
				<div class="producto">
					<a href="~/Home/Productos/@(item.Id)">
						<img src="~/imagenes/productos/@(item.Id).png" alt="Juerta Mix: Aura 6">

					</a>
					<h3>@item.Nombre</h3>
					@if(item.Preciopromocion==null)
					{
					<p class="precio">$@(item.Precio)</p>
					}
					else
					{
						<p class="promocion">$@(item.Precio) <p class="precio">$@(item.Preciopromocion)</p> </p>
					}

					@if (item.Stock==0)
					{
						<p>Sin stock</p>
					}
					else
					{
					<p>@(item.Stock) Piezas disponibles</p>

					}
				</div>

			}

		</div>
	</div>

</body>
</html>
