@model gpdSW.Models.ViewModels.EventosViewModel
@{
	ViewData["Title"] = "Eventos";
	Layout = "~/Views/shared/Layout.cshtml";
}
<!DOCTYPE html>
<html lang="es">
<head>
	<meta charset="UTF-8">
	<meta name="viewport" content="width=device-width, initial-scale=1.0">
	<title>Eventos - Cheese&More</title>
	<style>

		body {
			font-family: 'Candara', serif;
			margin: 0;
			padding: 0;
			background-color: white;
		}


		nav {
			background-color: #b2b785;
			padding: 15px 20px;
		}

		.nav-container {
			display: flex;
			justify-content: space-between;
			align-items: center;
			max-width: 1200px;
			margin: auto;
		}

		.logo {
			font-size: 24px;
			font-weight: bold;
		}

		.nav-links {
			list-style: none;
			display: flex;
			gap: 20px;
		}

			.nav-links li a {
				text-decoration: none;
				color: black;
				font-weight: bold;
				font-size: 16px;
			}

		.icons {
			display: flex;
			gap: 15px;
		}

		.icon {
			font-size: 18px;
			cursor: pointer;
		}


		.eventos {
			max-width: 1200px;
			margin: 20px auto;
			padding: 20px;
		}

			.eventos h1 {
				font-size: 36px;
				margin-bottom: 20px;
				font-weight: normal;
				text-align: center;
			}

		.lista-eventos {
			display: grid;
			grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
			gap: 20px;
		}

		.evento {
			background-color: white;
			padding: 15px;
			border-radius: 10px;
			box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
			text-align: center;
			transition: transform 0.3s ease, box-shadow 0.3s ease;
		}

			.evento:hover {
				transform: translateY(-5px);
				box-shadow: 0 6px 12px rgba(0, 0, 0, 0.15);
			}

			.evento img {
				max-width: 100%;
				border-radius: 10px;
				margin-bottom: 10px;
			}

			.evento h3 {
				color: #333;
				margin: 10px 0;
				font-size: 1.1em;
			}

	</style>
</head>
<body>

	<div class="eventos">
		<h1>Próximos Eventos</h1>

		<div class="lista-eventos">
			@foreach (var item in Model.listaeventos)
			{
				<!-- Ejemplo de un evento -->
				<div class="evento">
					<a href="~/Home/Detalleseventosv2/@item.Id">
						<img src="~/imagenes/eventos/@(item.Id).png" alt="Evento 1">

					</a>
					<h3>@item.Nombre</h3>
				</div>


			}
		</div>

	</div>


</body>
</html>