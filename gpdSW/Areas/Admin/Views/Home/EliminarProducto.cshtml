@model gpdSW.Models.Entities.Productos

@{
	ViewData["Title"] = "EliminarProducto";

}
<!DOCTYPE html>
<html lang="es">
<head>
	<meta charset="UTF-8">
	<meta name="viewport" content="width=device-width, initial-scale=1.0">
	<title>Eliminar Producto</title>
	<style>
		
		body {
			font-family: 'Arial', sans-serif;
			margin: 0;
			padding: 0;
			background-color: #f9f5e3; 
			color: #4a4a4a;
			display: flex;
			justify-content: center;
			align-items: center;
			height: 100vh;
		}

		.container {
			background-color: white;
			padding: 30px;
			border-radius: 10px;
			box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
			max-width: 800px; 
			width: 100%;
			display: flex;
			gap: 20px;
		}

		.producto-info {
			flex: 1;
			background-color: #f8f8f8;
			padding: 20px;
			border-radius: 5px;
			text-align: left;
		}

			.producto-info h2 {
				color: #d4a373; 
				margin: 0 0 10px;
			}

			.producto-info p {
				margin: 5px 0;
				color: #666;
			}

			.producto-info .precio {
				font-weight: bold;
				color: #28a745; /* Verde para el precio */
			}

			.producto-info .stock {
				color: #dc3545; /* Rojo para el stock */
			}

		.confirmation-message {
			font-size: 1.1em;
			margin-bottom: 20px;
			color: #666;
		}

		.buttons {
			display: flex;
			justify-content: space-between;
		}

			.buttons button {
				padding: 10px 20px;
				border: none;
				border-radius: 5px;
				cursor: pointer;
				font-size: 16px;
				transition: background-color 0.3s ease;
			}

				.buttons button.confirm {
					background-color: #dc3545; /* Rojo para confirmar eliminación */
					color: white;
				}

				.buttons button.cancel {
					background-color: #6c757d; /* Gris para cancelar */
					color: white;
				}

				.buttons button:hover {
					opacity: 0.9;
				}

		.producto-imagen {
			flex: 1;
			display: flex;
			justify-content: center;
			align-items: center;
		}

			.producto-imagen img {
				max-width: 100%;
				border-radius: 10px;
				box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
			}
	</style>
</head>
<body>
	<form method="post" action="~/Admin/Home/EliminarProducto/@(Model.Id)">
		<div class="container">

			<div class="producto-info">
				<h2>@Model.Nombre</h2>
				<p><strong>Categoría:</strong> @Model.IdCategoria</p>
				<p><strong>Precio:</strong> <span class="precio">$@(@Model.Precio)</span></p>
				<p><strong>Stock:</strong> <span class="stock">@(@Model.Stock) unidades</span></p>
				<p class="confirmation-message">¿Estás seguro de que deseas eliminar este producto? Esta acción no se puede deshacer.</p>
				<div class="buttons">
					<button type="submit">Eliminar</button>
					<a href="~/Admin">Cancelar</a>
				</div>
			</div>


			<div class="producto-imagen">
				<img src="~/imagenes/productos/@(Model.Id).png" alt="Tabla de Quesos Mediana">
			</div>
		</div>

	</form>


</body>
</html>